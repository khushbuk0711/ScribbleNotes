<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewNoteFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarcreatenote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:background="@color/lightpurple">

            <EditText
                android:id="@+id/addNoteTitle"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Enter your notes title here"
                android:paddingTop="10dp"
                android:textSize="25dp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

        <EditText
            android:id="@+id/addNoteDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbarcreatenote"
            android:background="@drawable/createnote"
            android:fontFamily="@font/poppins"
            android:gravity="top|left"
            android:hint="type your note"
            android:padding="15dp"
            android:textSize="20dp" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/savenotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="35dp"
            android:backgroundTint="@color/pink"
            android:src="@drawable/save_black_24dp" />

    </RelativeLayout>


</layout>