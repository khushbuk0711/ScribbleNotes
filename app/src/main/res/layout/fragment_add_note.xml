<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewNoteFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarcreatenote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:background="@color/lightpurple">

            <EditText
                android:id="@+id/addNoteTitle"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Enter your notes title here"
                android:paddingTop="10dp"
                android:textSize="25dp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>


                <com.yahiaangelo.markdownedittext.MarkdownEditText
                    android:id="@+id/addNoteDesc"
                    android:layout_width="match_parent"
                    android:layout_height="705dp"
                    android:layout_below="@id/toolbarcreatenote"
                    android:background="@drawable/createnote"
                    android:fontFamily="@font/poppins"
                    android:gravity="top|left"
                    android:hint="type your note"
                    android:padding="15dp"
                    android:textSize="20dp" />
            </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/savenotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"

            android:layout_marginEnd="8dp"
            android:layout_marginBottom="70dp"
            android:backgroundTint="@color/bluegreen"
            android:src="@drawable/save_black_24dp" />

    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true">
        <com.yahiaangelo.markdownedittext.MarkdownStylesBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/styleBar"
            android:layout_gravity="center"
            android:padding="5dp"
            app:buttonColor="@color/yellow"
            />
    </LinearLayout>


</RelativeLayout>